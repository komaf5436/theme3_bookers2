<h1>User info</h1>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <table class="table">
    <thead>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>

    <h2 class="mt-3">New book</h2>
      <% if @book_new.errors.any? %>
        <%= @book_new.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @book_new.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book_new, local: true do |f| %>
      <div class="form-group">
        <h4>Title</h4>
        <%= f.text_field:title %>
      </div>
      <div class="form_group">
        <h4>Opinion</h4>
        <%= f.text_area:body, autofocus:true %>
      </div>
      <div class="form_group">
        <%= f.submit "Create Book", class:"btn-success" %>
      </div>
      <% end %>